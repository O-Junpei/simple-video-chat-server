<!doctype html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>Onojun-Web-RTC</title>
    <link rel="stylesheet" type="text/css" href="styles/style.css">
</head>

<body>
<div id="base">
  <video id="remote_video" autoplay></video>
  <div id="buttons">
      <button type="button" onclick="startVideo();">Start Video</button>
      <button type="button" onclick="stopVideo();">Stop Video</button>
      &nbsp;
      <button type="button" onclick="connect();">Connect</button>
      <button type="button" onclick="hangUp();">Hang Up</button>
  </div>
  <div id="myVideo">
      <video id="local_video" autoplay style="width: 160px; height: 120px;"></video>
      <p>SDP to receive:&nbsp;
          <textarea id="text_for_receive_sdp" rows="5" cols="60"></textarea>
      </p>
  </div>
</div>
<script type='text/javascript' src='/scripts/webrtc.js'></script>
</body>
</html>
